<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="40dp"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/circular_bg"
                android:backgroundTint="@color/my_primary"
                android:src="@drawable/person_icon"
                android:scaleType="centerCrop"
                android:layout_marginBottom="20dp"
                android:id="@+id/profile_image_view"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Username"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="17dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:hint="Username"
                android:inputType="text"
                android:layout_margin="5dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                android:id="@+id/profile_username"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Phone Number"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="17dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:hint="Phone"
                android:inputType="text"
                android:layout_margin="5dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                android:enabled="false"
                android:id="@+id/profile_phone"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Age"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="17dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:hint="Age"
                android:inputType="number"
                android:layout_margin="10dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                android:id="@+id/profile_age"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Gender"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="17dp" />
            <Spinner
                android:id="@+id/profile_gender"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:hint="Gender"
                android:spinnerMode="dropdown"
                android:layout_margin="10dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pet Owner/ Caretaker"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="17dp" />
            <Spinner
                android:id="@+id/profile_position"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:hint="Position"
                android:spinnerMode="dropdown"
                android:layout_margin="10dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Owned Pets"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="17dp" />
            <Spinner
                android:id="@+id/profile_owned_pets"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:hint="Owned pets"
                android:spinnerMode="dropdown"
                android:layout_margin="10dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Experience"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="17dp" />
            <Spinner
                android:id="@+id/profile_experience"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:hint="Experience"
                android:spinnerMode="dropdown"
                android:layout_margin="10dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Location"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="17dp" />


            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:hint="Location"
                android:inputType="text"
                android:layout_margin="10dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                android:id="@+id/profile_location"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Details"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="17dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:hint="Description"
                android:inputType="text"
                android:layout_margin="10dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                android:id="@+id/profile_description"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Profile"
                    android:textColor="@color/white"
                    android:id="@+id/profile_update_btn"
                    android:background="@drawable/button_rounded_corner"/>
                <ProgressBar
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:indeterminateTint="@color/my_primary"
                    android:layout_gravity="center"
                    android:id="@+id/profile_progress_bar"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:id="@+id/logout_btn"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>