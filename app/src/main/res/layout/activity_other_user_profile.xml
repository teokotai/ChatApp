<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".OtherUserProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_primary"
        android:id="@+id/toolbar"
        android:padding="10dp">
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="back"
            app:tint="@color/white"
            android:layout_centerVertical="true"
            android:id="@+id/back_btn"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:gravity="center">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/circular_bg"
                android:backgroundTint="@color/my_primary"
                android:src="@drawable/person_icon"
                android:scaleType="centerCrop"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/other_profile_image_view"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Username"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/other_username"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                android:hint="Username"
                android:padding="13dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Phone Number"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="13dp"
                android:hint="Phone"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                android:id="@+id/profile_phone"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Age"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="13dp"
                android:hint="Age"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                android:id="@+id/profile_age"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Gender"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/profile_gender"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="13dp"
                android:hint="Gender"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pet Owner/ Caretaker"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/profile_position"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="13dp"
                android:hint="Position"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Owned Pets"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/profile_owned_pets"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="13dp"
                android:textSize="16sp"
                android:hint="Owned Pets"
                android:layout_margin="5dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Experience"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/profile_experience"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="13dp"
                android:hint="Experience"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Location"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="13dp"
                android:hint="Location"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                android:id="@+id/profile_location"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Details"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:hint="Description"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                android:id="@+id/profile_description"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>